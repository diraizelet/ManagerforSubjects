
<div class="modal fade" id="topicModal" tabindex="-1" role="dialog" aria-labelledby="topicModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="topicModalLabel">Manage Topic</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="topicForm">
                    @Html.AntiForgeryToken()

                    <input type="hidden" id="topicId" name="Id" />

                    <div class="form-group">
                        <label for="topicName">Topic Name</label>
                        <input type="text" class="form-control" id="topicName" name="Name" required />
                    </div>

                    <div class="form-group">
                        <label for="topicDescription">Description</label>
                        <textarea class="form-control" id="topicDescription" name="Description" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="topicSubjectId">Subject</label>
                        <select class="form-control" id="topicSubjectId" name="SubjectId" required>
                            <option value="">Select Subject</option>
                            @if (ViewBag.Subjects != null && ((List<ManagerforSubjects.Models.Subject>)ViewBag.Subjects).Any())
                            {
                                foreach (var subject in ViewBag.Subjects as List<ManagerforSubjects.Models.Subject>)
                                {
                                    <option value="@subject.Id">@subject.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

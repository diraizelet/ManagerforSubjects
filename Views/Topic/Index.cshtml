@model IEnumerable<ManagerforSubjects.Models.Topic>

@{
    ViewData["Title"] = "Topics";
}

<div class="text-center">
    <h1 class="display-4">Topics</h1>

    <!-- Display a table of topics -->
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Topic Name</th>
                <th>Subject</th>
                <th>Description</th>
                <th>Actions</th> <!-- Add a new column for actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var topic in Model)
            {
                <tr>
                    <td>@topic.Name</td>
                    <td>@topic.Subject.Name</td> <!-- Show subject name -->
                    <td>@topic.Description</td>
                    <td>
                        <!-- Button to create a new SubTopic for this topic -->
                        <a href="@Url.Action("Create", "SubTopic", new { topicId = topic.Id })" class="btn btn-primary">
                            New SubTopic
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model ManagerforSubjects.Models.Topic

@{
    ViewData["Title"] = "Edit Topic";
}

<h1>Edit Topic</h1>

<form method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Name">Topic Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" required></textarea>
    </div>

    <div class="form-group">
        <label for="SubjectId">Subject</label>
        <select class="form-control" asp-for="SubjectId" asp-items="ViewBag.Subjects"></select>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
</form>

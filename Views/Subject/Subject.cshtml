@model IEnumerable<ManagerforSubjects.Models.Subject>

@{
    ViewData["Title"] = "Subject";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Subject page</p>

    <!-- New Subject Button -->
    <a href="@Url.Action("Create", "Subject")" class="btn btn-primary">
        New Subject
    </a>

    <!-- Display a table of subjects -->
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model)
            {
                <tr>
                    <td>@subject.Name</td>
                    <td>@subject.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
